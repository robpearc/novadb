# NovaDB MANIFEST.in
# Include additional files in source distribution

# Include license and documentation
include LICENSE
include README.md
include CHANGELOG.md
include CONTRIBUTING.md

# Include configuration files
include pyproject.toml
include setup.cfg
include pytest.ini
include Makefile

# Include requirements files
include requirements.txt
include requirements-dev.txt

# Include type hints marker
include src/novadb/py.typed

# Include package data
recursive-include src/novadb *.yaml
recursive-include src/novadb *.json
recursive-include src/novadb *.typed

# Include tests
recursive-include tests *.py
recursive-include tests *.yaml
recursive-include tests *.json
include tests/conftest.py

# Include documentation source
recursive-include docs *.rst
recursive-include docs *.py
recursive-include docs *.md
recursive-include docs Makefile
prune docs/_build

# Exclude unwanted files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude .git*
global-exclude *.egg-info
prune .venv
prune venv
prune build
prune dist
